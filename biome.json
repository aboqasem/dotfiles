{
	"$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
	"organizeImports": {
		"enabled": true
	},
	"files": {
		"ignore": [
			"custom/plugins/fzf-tab",
			"custom/plugins/wakatime",
			"custom/plugins/zsh-autosuggestions",
			"custom/plugins/zsh-syntax-highlighting",
			"custom/themes/powerlevel10k",
			"synced/symlink/.oh-my-zsh"
		]
	},
	"vcs": {
		"enabled": true,
		"root": ".",
		"clientKind": "git",
		"useIgnoreFile": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"suspicious": {
				"useAwait": "warn"
			},
			"style": {
				"useConsistentArrayType": "warn",
				"useImportType": "warn",
				"useExportType": "warn",
				"noParameterAssign": "off"
			}
		}
	},
	"formatter": {
		"enabled": true,
		"lineWidth": 120
	}
}
